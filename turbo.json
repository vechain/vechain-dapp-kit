{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "outputs": ["build/**", "dist/**"],
            "dependsOn": ["^build"]
        },
        "purge": {
            "cache": false
        },
        "test": {
            "outputs": ["coverage/**"],
            "dependsOn": ["build"]
        },
        "preview": {
            "dependsOn": ["build"]
        },
        "test:e2e": {
            "dependsOn": ["preview"]
        },
        "lint": {},
        "dev": {
            "cache": false,
            "persistent": true
        },
        "clean": {
            "cache": false
        }
    }
}
