        "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
        "purge": "yarn clean && rm -rf node_modules"
    },
    "dependencies": {
        "@chakra-ui/react": "^2.8.1",
        "@heroicons/react": "^2.0.18",
        "@vechain/connex": "2.1.0",
        "@vechain/connex-framework": "2.1.0",
        "@vechain/picasso": "^2.1.1",
        "@vechainfoundation/vanilla-wallet-kit": "*",
        "@vechainfoundation/wallet-connect": "*",
        "@vechainfoundation/wallet-kit": "*",
        "thor-devkit": "^2.0.9"
    },
    "devDependencies": {
        "@types/react": "^18.2.28",
        "@types/react-dom": "^18.2.13",
        "@vechain/repo-config": "https://github.com/vechainfoundation/repo-config#v0.0.1",
        "eslint": "*",
        "react": "^18.2.0",
        "tsup": "*",
        "typescript": "*"
    }
