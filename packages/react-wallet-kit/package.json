{
    "name": "@vechainfoundation/react-wallet-kit",
    "version": "0.0.0",
    "private": false,
    "license": "MIT",
    "sideEffects": false,
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "scripts": {
        "build": "tsup src/index.tsx --format cjs --dts --external react",
        "clean": "rm -rf dist .turbo",
