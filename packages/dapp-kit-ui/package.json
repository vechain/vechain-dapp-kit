{
    "name": "@vechain/dapp-kit-ui",
    "version": "2.0.0",
    "description": "Vanilla JS DAppKit",
    "keywords": [
        "web-components",
        "lit-element",
        "typescript",
        "lit"
    ],
    "homepage": "https://github.com/vechain/vechain-dapp-kit",
    "repository": "github:vechain/vechain-dapp-kit",
    "license": "MIT",
    "author": "Davide Carpini",
    "type": "module",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "package.json",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "tsup",
        "clean": "rm -rf dist .turbo",
        "dev": "rm -rf ../../.parcel-cache; parcel --no-cache index.html",
        "lint": "eslint",
        "purge": "yarn clean && rm -rf node_modules",
        "test": "vitest run --coverage",
        "test:dev": "vitest run ",
        "watch": "yarn build --watch"
    },
    "dependencies": {
        "@vechain/dapp-kit": "workspace:*",
        "@vechain/picasso": "2.1.1",
        "@vechain/sdk-core": "1.1.0",
        "@vechain/sdk-network": "1.1.0",
        "@wagmi/core": "^2.16.7",
        "@web3modal/ethereum": "^2.7.1",
        "@web3modal/html": "^2.7.1",
        "lit": "3.2.1",
        "qrcode": "1.5.4",
        "valtio": "2.1.4"
    },
    "devDependencies": {
        "@types/qrcode": "^1.5.5",
        "@typescript-eslint/eslint-plugin": "^8.29.1",
        "@typescript-eslint/parser": "^8.29.1",
        "@vitest/coverage-v8": "^3.1.1",
        "eslint": "^9.24.0",
        "parcel": "^2.14.4",
        "prettier": "^3.5.3",
        "punycode": "^2.3.1",
        "tsup": "^8.4.0",
        "typechain": "^8.3.2",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.29.1",
        "vite": "^6.2.5",
        "vitest": "^3.1.1"
    }
}
