{
    "name": "@vechain/wallet-kit",
    "version": "0.0.0",
    "private": true,
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --dts",
        "clean": "rm -rf dist .turbo",
        "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
