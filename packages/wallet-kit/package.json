    "dependencies": {
        "@vechain/connex": "2.1.0",
        "@vechain/connex-driver": "2.1.0",
        "@vechain/connex-framework": "2.1.0",
        "@vechain/wallet-connect": "*",
        "events": "^3.3.0",
        "thor-devkit": "^2.0.9"
    },
    "devDependencies": {
        "@types/react": "^18.2.28",
        "@types/react-dom": "^18.2.13",
        "@vechain/repo-config": "https://github.com/vechainfoundation/repo-config#v0.0.1",
        "eslint": "*",
        "tsup": "*",
        "typescript": "*"
    }
}
