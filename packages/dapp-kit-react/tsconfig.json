{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "es2021",
        "experimentalDecorators": true,
        "composite": false,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "inlineSources": false,
        "isolatedModules": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "preserveWatchOutput": true,
        "skipLibCheck": true,
        "strict": true,
        "jsx": "react-jsx"
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts",
        "test/**/*.tsx",
        "eslint.config.mjs"
    ]
}
