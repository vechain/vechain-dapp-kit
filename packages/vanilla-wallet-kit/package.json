{
    "name": "@vechain/vanilla-wallet-kit",
    "version": "2.0.0",
    "private": true,
    "description": "Vanilla js wallet kit",
    "keywords": [
        "web-components",
        "lit-element",
        "typescript",
        "lit"
    ],
    "license": "MIT",
    "author": "Davide Carpini",
    "type": "module",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "scripts": {
